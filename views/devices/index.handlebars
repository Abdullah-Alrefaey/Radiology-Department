<nav>
    <div class="nav-wrapper grey">
        <a href="#" class="brand-logo">Devices</a>
        <ul class="right">
            <a href="/devices/add" class="btn-floating grey"><i class="fa fa-plus"></i></a>
        </ul>
    </div>
</nav>


<div class="row">
    {{#each devices}}
        <div class="col s12 m7">
            <h3 class="header">{{devName}}</h3>

            <div class="card horizontal">

                <div class="card-image">
                    <img src="{{image}}" class="responsive-img">
                </div>

                <div class="card-stacked">
                    <div class="card-content">
                        <p class="story-text">{{stripTags description}}</p>
                    </div>
                    
                    <div class="card-action">
                        <a href="#">Read More</a>
                    </div>
                </div>
            
            </div>
        </div>

    {{else}}
        <h1>No Devices Found</h1>
    {{/each}}
</div>